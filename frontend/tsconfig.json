{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "..",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom"]
    },
    "include": ["frontend/src/**/*.ts", "frontend/src/**/*.d.ts", "frontend/src/**/*.tsx", "frontend/src/**/*.vue"]
}
